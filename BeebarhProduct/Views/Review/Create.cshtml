@model ProductReviewSystem.Models.ViewModels.CreateReviewViewModel

@{ ViewBag.Title = "Create Review"; }

<h1 class="text-center">Welcome @ViewBag.userId </h1>
<div class="row ">
        
        <div class="card-header">
            <h2>Make A Review</h2>
        </div>

        <div class="card-body">

            <form method="post" asp-action="SubmitReview">

                <div class="form-group">
                    <input asp-for="UserId" hidden/>
                 
                    <select asp-for="ProductId" asp-items="ViewBag.products" class="form-control">
                        <option selected>--Select Product Name--</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span><br>

                    <textarea asp-for="Comment" class="form-control" placeholder="Leave a Comment here"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span><br>

                    <input asp-for="Ratings" class="form-control" placeholder="Rate Us" />
                    <span asp-validation-for="Ratings" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Review" class="btn btn-success" />
                </div>

            </form>

        </div>
</div>

